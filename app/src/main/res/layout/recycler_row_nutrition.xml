<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@drawable/row_rec"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="7dp">

    <TextView
        android:id="@+id/row_nutr_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/row_nutr_carb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_nutr_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_nutr_carb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/str_carb"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/row_nutr_calorie"
        app:layout_constraintTop_toBottomOf="@+id/row_nutr_calorie"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/row_nutr_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/str_protein"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/row_nutr_carb"
        app:layout_constraintTop_toBottomOf="@+id/row_nutr_carb"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/row_nutr_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/str_fat"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/row_nutr_protein"
        app:layout_constraintTop_toBottomOf="@+id/row_nutr_protein"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>